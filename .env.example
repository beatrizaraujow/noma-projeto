# ----------------------------------------
# DATABASE (PostgreSQL)
# ----------------------------------------
DATABASE_URL="postgresql://noma_user:senha_exemplo@localhost:5432/noma_db?schema=public"

# ----------------------------------------
# AUTHENTICATION
# ----------------------------------------
JWT_SECRET="exemplo_jwt_secret_change_in_production_use_random_string"
JWT_EXPIRES_IN="7d"

# OAuth - Google (Exemplo - Configure no Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3001/api/auth/google/callback"

# ----------------------------------------
# API CONFIGURATION
# ----------------------------------------
API_PORT=3001
API_URL="http://localhost:3001"
NODE_ENV="development"

# ----------------------------------------
# FRONTEND CONFIGURATION
# ----------------------------------------
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ----------------------------------------
# REDIS (Cache & Sessions - Opcional para demo)
# ----------------------------------------
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# ----------------------------------------
# STORAGE (Upload de arquivos - Opcional)
# ----------------------------------------
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=5242880

# ----------------------------------------
# EMAIL (Opcional para demo - use Mailtrap/Ethereal)
# ----------------------------------------
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT=2525
SMTP_USER="your-mailtrap-user"
SMTP_PASSWORD="your-mailtrap-password"
EMAIL_FROM="noma@example.com"

# ----------------------------------------
# INTEGRA√á√ïES (FASE 2 - Opcional para demo)
# ----------------------------------------
# GitHub
GITHUB_CLIENT_ID="seu-github-client-id"
GITHUB_CLIENT_SECRET="seu-github-client-secret"

# Slack
SLACK_CLIENT_ID="seu-slack-client-id"
SLACK_CLIENT_SECRET="seu-slack-client-secret"

# ----------------------------------------
# OBSERVABILITY (Opcional)
# ----------------------------------------
LOG_LEVEL="info"
SENTRY_DSN=""

# ----------------------------------------
# CORS
# ----------------------------------------
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
