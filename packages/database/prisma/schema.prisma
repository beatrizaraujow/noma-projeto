// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  avatar    String?
  role      String   @default("USER") // USER, ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ownedProjects        Project[]         @relation("ProjectOwner")
  projects             Project[]         @relation("ProjectMembers")
  tasks                Task[]
  comments             Comment[]
  activities           Activity[]
  workspaceMemberships WorkspaceMember[]
  sentInvites          WorkspaceInvite[] @relation("InviteSender")
  savedFilters         SavedFilter[]
  projectMemberships   ProjectMember[]
  customRoles          CustomRole[]
  auditLogs            AuditLog[]
  guestAccesses        GuestAccess[]

  @@map("users")
}

model Workspace {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  logo        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members  WorkspaceMember[]
  projects Project[]
  invites  WorkspaceInvite[]

  @@map("workspaces")
}

model WorkspaceMember {
  id           String   @id @default(cuid())
  workspaceId  String
  userId       String
  role         String   @default("MEMBER") // OWNER, ADMIN, MEMBER
  customRoleId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  workspace  Workspace   @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  customRole CustomRole? @relation(fields: [customRoleId], references: [id])

  @@unique([workspaceId, userId])
  @@index([workspaceId])
  @@index([userId])
  @@index([customRoleId])
  @@map("workspace_members")
}

model WorkspaceInvite {
  id          String    @id @default(cuid())
  workspaceId String
  email       String
  role        String    @default("MEMBER")
  token       String    @unique
  invitedById String
  expiresAt   DateTime
  acceptedAt  DateTime?
  createdAt   DateTime  @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  invitedBy User      @relation("InviteSender", fields: [invitedById], references: [id])

  @@unique([workspaceId, email])
  @@index([workspaceId])
  @@index([token])
  @@map("workspace_invites")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String?
  icon        String?
  workspaceId String
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace      Workspace       @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  owner          User            @relation("ProjectOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members        User[]          @relation("ProjectMembers")
  tasks          Task[]
  activities     Activity[]
  projectMembers ProjectMember[]
  guestAccesses  GuestAccess[]

  @@index([workspaceId])
  @@map("projects")
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  status      String    @default("TODO")
  priority    String    @default("MEDIUM")
  dueDate     DateTime?
  projectId   String
  assigneeId  String?
  position    Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  project    Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee   User?      @relation(fields: [assigneeId], references: [id])
  comments   Comment[]
  activities Activity[]

  @@index([projectId])
  @@index([assigneeId])
  @@map("tasks")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  taskId    String
  authorId  String
  mentions  String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  task        Task         @relation(fields: [taskId], references: [id], onDelete: Cascade)
  author      User         @relation(fields: [authorId], references: [id])
  attachments Attachment[]

  @@index([taskId])
  @@map("comments")
}

model Attachment {
  id         String   @id @default(cuid())
  filename   String
  url        String
  size       Int
  mimeType   String
  commentId  String?
  taskId     String?
  uploadedBy String
  createdAt  DateTime @default(now())

  comment Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@index([commentId])
  @@index([taskId])
  @@map("attachments")
}

model Activity {
  id          String   @id @default(cuid())
  type        String
  description String
  projectId   String?
  taskId      String?
  userId      String
  metadata    Json?
  createdAt   DateTime @default(now())

  project Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  task    Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user    User     @relation(fields: [userId], references: [id])

  @@index([projectId])
  @@index([taskId])
  @@index([userId])
  @@map("activities")
}

model SavedFilter {
  id          String   @id @default(cuid())
  name        String
  description String?
  entityType  String // 'task', 'project', 'activity'
  filters     Json // Store filter configuration as JSON
  userId      String
  workspaceId String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([workspaceId])
  @@index([entityType])
  @@map("saved_filters")
}

// ==================== PERMISSIONS & ROLES ====================

model CustomRole {
  id          String   @id @default(cuid())
  name        String
  description String?
  workspaceId String?
  isSystem    Boolean  @default(false) // System roles cannot be deleted
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy        User              @relation(fields: [createdById], references: [id])
  permissions      Permission[]
  projectMembers   ProjectMember[]
  workspaceMembers WorkspaceMember[]

  @@unique([name, workspaceId])
  @@index([workspaceId])
  @@map("custom_roles")
}

model Permission {
  id         String   @id @default(cuid())
  roleId     String
  resource   String // 'project', 'task', 'comment', 'member', etc.
  action     String // 'view', 'create', 'edit', 'delete', 'manage'
  scope      String   @default("all") // 'all', 'own', 'assigned'
  conditions Json? // Additional conditions as JSON
  createdAt  DateTime @default(now())

  role CustomRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([roleId, resource, action, scope])
  @@index([roleId])
  @@map("permissions")
}

model ProjectMember {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  roleId    String?
  role      String   @default("MEMBER") // OWNER, ADMIN, MEMBER, VIEWER, CUSTOM
  canView   Boolean  @default(true)
  canEdit   Boolean  @default(false)
  canDelete Boolean  @default(false)
  canManage Boolean  @default(false) // Manage members and settings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project    Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  customRole CustomRole? @relation(fields: [roleId], references: [id])

  @@unique([projectId, userId])
  @@index([projectId])
  @@index([userId])
  @@index([roleId])
  @@map("project_members")
}

model GuestAccess {
  id         String    @id @default(cuid())
  projectId  String
  userId     String?
  email      String
  token      String    @unique
  canView    Boolean   @default(true)
  canComment Boolean   @default(false)
  expiresAt  DateTime?
  revokedAt  DateTime?
  createdAt  DateTime  @default(now())
  accessedAt DateTime?

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id])

  @@index([projectId])
  @@index([token])
  @@index([email])
  @@map("guest_accesses")
}

model AuditLog {
  id          String   @id @default(cuid())
  userId      String
  action      String // 'create', 'update', 'delete', 'view', 'login', etc.
  resource    String // 'project', 'task', 'user', 'permission', etc.
  resourceId  String?
  description String
  metadata    Json? // Additional context (changes, IP, user agent, etc.)
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([resourceId])
  @@index([createdAt])
  @@map("audit_logs")
}

model Trigger {
  id          String   @id @default(cuid())
  workspaceId String
  name        String
  description String?
  event       String // 'task_created', 'task_updated', 'task_moved', 'task_completed', 'task_deleted'
  conditions  Json // Conditions to match (projectId, assigneeId, status, priority, etc.)
  actions     Json // Actions to execute (send_notification, create_task, update_task, assign_task)
  active      Boolean  @default(true)
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([workspaceId])
  @@index([event])
  @@index([active])
  @@map("triggers")
}

model ProjectTemplate {
  id          String   @id @default(cuid())
  workspaceId String? // null = global template
  name        String
  description String?
  category    String // 'sprint', 'marketing', 'product_launch', 'custom'
  icon        String?
  color       String?
  tasks       Json // Array of task templates
  settings    Json? // Default project settings
  isPublic    Boolean  @default(false)
  createdBy   String
  usageCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([workspaceId])
  @@index([category])
  @@index([isPublic])
  @@map("project_templates")
}

model RecurringTask {
  id           String    @id @default(cuid())
  workspaceId  String
  projectId    String
  title        String
  description  String?
  frequency    String // 'daily', 'weekly', 'monthly', 'yearly'
  interval     Int       @default(1) // Every X days/weeks/months/years
  daysOfWeek   Json? // [1,2,3,4,5] for weekly
  dayOfMonth   Int? // 1-31 for monthly
  monthOfYear  Int? // 1-12 for yearly
  taskTemplate Json // Template for created tasks (priority, status, assigneeId, etc.)
  startDate    DateTime
  endDate      DateTime?
  lastRun      DateTime?
  nextRun      DateTime
  active       Boolean   @default(true)
  createdBy    String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([workspaceId])
  @@index([projectId])
  @@index([nextRun])
  @@index([active])
  @@map("recurring_tasks")
}

model AutoAssignRule {
  id          String    @id @default(cuid())
  workspaceId String
  projectId   String? // null = applies to all projects in workspace
  name        String
  description String?
  conditions  Json // Match conditions (priority, status, tags, title contains, etc.)
  strategy    String // 'specific_user', 'round_robin', 'least_busy', 'random'
  config      Json // Strategy configuration (userId, team array, etc.)
  priority    Int       @default(0) // Higher priority rules are evaluated first
  active      Boolean   @default(true)
  createdBy   String
  lastUsed    DateTime?
  usageCount  Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([workspaceId])
  @@index([projectId])
  @@index([active])
  @@index([priority])
  @@map("auto_assign_rules")
}

model Workflow {
  id          String   @id @default(cuid())
  workspaceId String
  name        String
  description String?
  icon        String?
  color       String?
  trigger     Json // Trigger configuration (type: manual/webhook/scheduled/event, config)
  active      Boolean  @default(true)
  version     Int      @default(1)
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  steps      WorkflowStep[]
  executions WorkflowExecution[]

  @@index([workspaceId])
  @@index([active])
  @@map("workflows")
}

model WorkflowStep {
  id         String  @id @default(cuid())
  workflowId String
  name       String
  type       String // 'action', 'condition', 'loop', 'delay', 'webhook', 'notification'
  config     Json // Step configuration
  position   Int // Order in workflow
  parentId   String? // For nested steps (inside conditions/loops)
  nextStepId String? // Next step to execute (can be conditional)

  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@index([workflowId])
  @@index([position])
  @@index([parentId])
  @@map("workflow_steps")
}

model WorkflowExecution {
  id          String    @id @default(cuid())
  workflowId  String
  status      String // 'running', 'completed', 'failed', 'cancelled'
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  input       Json? // Input data
  output      Json? // Output data
  logs        Json[] // Execution logs
  error       String?
  triggeredBy String? // userId or 'webhook' or 'scheduled'

  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@index([workflowId])
  @@index([status])
  @@index([startedAt])
  @@map("workflow_executions")
}

model WebhookTrigger {
  id            String    @id @default(cuid())
  workspaceId   String
  workflowId    String
  name          String
  url           String    @unique // Generated webhook URL
  secret        String // Secret for signature verification
  active        Boolean   @default(true)
  lastTriggered DateTime?
  triggerCount  Int       @default(0)
  createdBy     String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([workspaceId])
  @@index([workflowId])
  @@index([active])
  @@map("webhook_triggers")
}

// ==================== INTEGRATIONS ====================

model Integration {
  id          String   @id @default(cuid())
  workspaceId String
  type        String // 'slack', 'discord', 'email', 'google_calendar', 'outlook_calendar'
  name        String
  description String?
  active      Boolean  @default(true)
  config      Json // Integration-specific configuration (webhook URL, tokens, etc.)
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  logs IntegrationLog[]

  @@unique([workspaceId, type, name])
  @@index([workspaceId])
  @@index([type])
  @@index([active])
  @@map("integrations")
}

model IntegrationLog {
  id            String   @id @default(cuid())
  integrationId String
  action        String // 'notification_sent', 'task_created', 'calendar_synced', 'error'
  status        String // 'success', 'error', 'pending'
  message       String?
  metadata      Json? // Additional data
  createdAt     DateTime @default(now())

  integration Integration @relation(fields: [integrationId], references: [id], onDelete: Cascade)

  @@index([integrationId])
  @@index([status])
  @@index([createdAt])
  @@map("integration_logs")
}

model CalendarEvent {
  id          String    @id @default(cuid())
  workspaceId String
  taskId      String?
  userId      String
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime
  location    String?
  provider    String // 'google', 'outlook', 'internal'
  externalId  String? // ID from external calendar provider
  metadata    Json? // Provider-specific data
  synced      Boolean   @default(false)
  syncedAt    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([provider, externalId])
  @@index([workspaceId])
  @@index([taskId])
  @@index([userId])
  @@index([startDate])
  @@index([provider])
  @@map("calendar_events")
}

model EmailInbox {
  id             String    @id @default(cuid())
  workspaceId    String
  projectId      String? // If null, goes to default project
  email          String // Email address to receive at (e.g., project+abc123@tasks.noma.com)
  provider       String    @default("internal") // 'internal', 'gmail', 'outlook'
  config         Json? // IMAP/SMTP configuration for external providers
  autoCreateTask Boolean   @default(true)
  active         Boolean   @default(true)
  lastSyncedAt   DateTime?
  createdBy      String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@unique([email])
  @@index([workspaceId])
  @@index([projectId])
  @@index([active])
  @@map("email_inboxes")
}

model GitHubPullRequest {
  id           String   @id @default(cuid())
  workspaceId  String
  taskId       String?
  repository   String // owner/repo
  prNumber     Int
  prTitle      String
  prUrl        String
  prState      String // 'open', 'closed', 'merged'
  prAuthor     String
  prBranch     String
  prCreatedAt  DateTime
  prUpdatedAt  DateTime
  prMergedAt   DateTime?
  synced       Boolean  @default(true)
  syncedAt     DateTime @default(now())
  metadata     Json? // Additional PR data (labels, assignees, etc.)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([repository, prNumber])
  @@index([workspaceId])
  @@index([taskId])
  @@index([repository])
  @@index([prState])
  @@map("github_pull_requests")
}

model FigmaFile {
  id          String   @id @default(cuid())
  workspaceId String
  projectId   String?
  taskId      String?
  fileKey     String // Figma file key
  fileName    String
  fileUrl     String
  embedUrl    String // Embed URL for iframe
  thumbnail   String?
  version     String? // Version ID
  lastSynced  DateTime @default(now())
  metadata    Json? // Additional file data
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([fileKey])
  @@index([workspaceId])
  @@index([projectId])
  @@index([taskId])
  @@map("figma_files")
}

model CloudFile {
  id          String    @id @default(cuid())
  workspaceId String
  projectId   String?
  taskId      String?
  provider    String // 'google_drive', 'dropbox'
  fileId      String // Provider's file ID
  fileName    String
  fileType    String // MIME type
  fileUrl     String // Direct link to file
  thumbnailUrl String?
  fileSize    Int? // Size in bytes
  sharedLink  String? // Public share link
  synced      Boolean   @default(true)
  syncedAt    DateTime  @default(now())
  metadata    Json? // Provider-specific metadata
  createdBy   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([provider, fileId])
  @@index([workspaceId])
  @@index([projectId])
  @@index([taskId])
  @@index([provider])
  @@map("cloud_files")
}

model WebhookEndpoint {
  id          String   @id @default(cuid())
  workspaceId String
  name        String
  description String?
  provider    String // 'zapier', 'make', 'custom'
  url         String // Unique webhook URL
  secret      String? // HMAC secret for verification
  active      Boolean  @default(true)
  events      Json // Array of event types to trigger on
  config      Json? // Provider-specific configuration
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  calls WebhookCall[]

  @@unique([url])
  @@index([workspaceId])
  @@index([provider])
  @@index([active])
  @@map("webhook_endpoints")
}

model WebhookCall {
  id         String   @id @default(cuid())
  endpointId String
  event      String // Event type that triggered the webhook
  payload    Json // Request payload
  response   Json? // Response from the webhook
  status     String // 'success', 'error', 'pending'
  statusCode Int?
  error      String?
  retries    Int      @default(0)
  createdAt  DateTime @default(now())

  endpoint WebhookEndpoint @relation(fields: [endpointId], references: [id], onDelete: Cascade)

  @@index([endpointId])
  @@index([status])
  @@index([createdAt])
  @@map("webhook_calls")
}
