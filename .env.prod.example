# Production Environment Variables Template
# Copy this file to .env.prod and fill in the values
# NEVER commit .env.prod to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
POSTGRES_DB=nexora

# MongoDB
MONGO_USER=root
MONGO_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
MONGO_DB=nexora

# Redis
REDIS_PASSWORD=GENERATE_STRONG_PASSWORD_HERE

# ============================================
# API CONFIGURATION
# ============================================

# Database URLs (constructed from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public
MONGODB_URI=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@mongodb:27017/${MONGO_DB}?authSource=admin
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
ELASTICSEARCH_NODE=http://elasticsearch:9200

# JWT Configuration
JWT_SECRET=GENERATE_STRONG_SECRET_HERE_64_CHARS_MINIMUM
JWT_EXPIRATION=7d

# Frontend URL
FRONTEND_URL=https://seu-dominio.com

# ============================================
# WEB CONFIGURATION
# ============================================

# API URLs
NEXT_PUBLIC_API_URL=https://api.seu-dominio.com
NEXT_PUBLIC_WS_URL=wss://api.seu-dominio.com

# NextAuth Configuration
NEXTAUTH_URL=https://seu-dominio.com
NEXTAUTH_SECRET=GENERATE_STRONG_SECRET_HERE_32_CHARS_MINIMUM

# ============================================
# OPTIONAL SERVICES
# ============================================

# Email (if using)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# AWS S3 (if using for file uploads)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_BUCKET=your-bucket-name

# Sentry (error tracking)
# SENTRY_DSN=your-sentry-dsn
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# ============================================
# GENERATE SECRETS WITH:
# ============================================
# JWT_SECRET: openssl rand -base64 64
# NEXTAUTH_SECRET: openssl rand -base64 32
# Passwords: openssl rand -base64 32
